{{ form_start(form) }}
    {{ form_widget(form) }}
        {# Si la route est "annonces_edit on affiche les images #}
	{% if app.request.attributes.get('_route') == 'produit_edit' %}
        <h2>Images</h2>
        {% for image in produit.images %}
            <div>
                <img src="{{ asset('/uploads/'~image.name) }}" alt="" width="150">

                {# On ajoute un lien permettant de supprimer une image (sera géré en Ajax) #}
                <a href="{{ path('produit_delete_image', {id: image.id})}}" data-delete data-token="{{ csrf_token('delete' ~ image.id )}}">Supprimer</a>
            </div>
        {% endfor %}
    {% endif %}
    <br> <br>
    <button type="submit" class="btn btn-success">ajouter un Produit </button>
{{ form_end(form) }}
