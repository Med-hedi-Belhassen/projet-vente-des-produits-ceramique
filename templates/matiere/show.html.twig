{% extends 'base.html.twig' %}

{% block title %}Matiere{% endblock %}

{% block body %}
    <h1>Matiere</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ matiere.id }}</td>
            </tr>
            <tr>
                <th>Designation</th>
                <td>{{ matiere.designation }}</td>
            </tr>
            <tr>
                <th>Caracteristique</th>
                <td>{{ matiere.caracteristique }}</td>
            </tr>
            <tr>
                <th>Couleur</th>
                <td>{{ matiere.couleur }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ matiere.prix }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('matiere_index') }}"class="btn btn-dark ">back to list</a> 
    {% if is_granted('ROLE_EDITOR') %} 
    <a href="{{ path('matiere_edit', {'id': matiere.id}) }} " class="btn btn-success ">Modifier</a>

    {{ include('matiere/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
